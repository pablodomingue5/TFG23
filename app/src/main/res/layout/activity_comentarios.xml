<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    style="@style/fondoLayoutComentarios"
    tools:context=".Apartado.ActivityComentariosDatos">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/ReciclerView"
        style="@style/ComentariosLista"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/inComentario"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="10dp"
        android:hint="Nombre"
        style="@style/inputComentarios"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ReciclerView" />
    <EditText
        android:id="@+id/inComentario2"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="4dp"
        style="@style/inputComentarios"
        android:hint="Comentario"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inComentario" />
    <Button
        android:id="@+id/btnInsertarComentario"
        android:layout_marginEnd="16dp"
        style="@style/BotonComentario"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ReciclerView"
        android:layout_marginRight="16dp" />
</androidx.constraintlayout.widget.ConstraintLayout>